<Window x:Class="BasicCalcWpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Basic Calculator" Height="550" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Para la operación actual -->
            <RowDefinition Height="Auto"/>
            <!-- Para el display principal -->
            <RowDefinition Height="*"/>
            <!-- Para los botones -->
        </Grid.RowDefinitions>

        <!-- Display de la operación actual - MEJORADO -->
        <Border Grid.Row="0" Background="#f8f8f8" BorderBrush="#cccccc" BorderThickness="1" 
                Margin="0,0,0,10" Padding="10,5" Height="40">
            <TextBlock Text="{Binding CurrentOperation, Mode=OneWay}"
                       FontSize="18" HorizontalAlignment="Right" 
                       Foreground="#666666" VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"/>
        </Border>

        <!-- Display principal -->
        <TextBox Grid.Row="1" Text="{Binding DisplayContent, Mode=OneWay}" 
                 FontSize="32" HorizontalContentAlignment="Right" 
                 IsReadOnly="True" Margin="0,0,0,15"
                 Background="#f0f0f0" BorderThickness="1" BorderBrush="#cccccc"
                 Padding="10,5" Height="60"/>

        <!-- Panel de botones -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Fila 1 -->
            <Button Grid.Row="0" Grid.Column="0" FontSize="20" Content="7" 
                    Command="{Binding DigitCommand}" CommandParameter="7"
                    />
            <Button Grid.Row="0" Grid.Column="1" FontSize="20" Content="8" 
                    Command="{Binding DigitCommand}" CommandParameter="8"
                    />
            <Button Grid.Row="0" Grid.Column="2" FontSize="20" Content="9" 
                    Command="{Binding DigitCommand}" CommandParameter="9"
                    />
            <Button Grid.Row="0" Grid.Column="3" FontSize="20" Content="÷" 
                    Command="{Binding OperationCommand}" CommandParameter="/"
                    />

            <!-- Fila 2 -->
            <Button Grid.Row="1" Grid.Column="0" FontSize="20" Content="4" 
                    Command="{Binding DigitCommand}" CommandParameter="4"
                    />
            <Button Grid.Row="1" Grid.Column="1" FontSize="20" Content="5" 
                    Command="{Binding DigitCommand}" CommandParameter="5"
                    />
            <Button Grid.Row="1" Grid.Column="2" FontSize="20" Content="6" 
                    Command="{Binding DigitCommand}" CommandParameter="6"
                    />
            <Button Grid.Row="1" Grid.Column="3" FontSize="20" Content="×" 
                    Command="{Binding OperationCommand}" CommandParameter="*"
                    />

            <!-- Fila 3 -->
            <Button Grid.Row="2" Grid.Column="0" FontSize="20" Content="1" 
                    Command="{Binding DigitCommand}" CommandParameter="1"
                    />
            <Button Grid.Row="2" Grid.Column="1" FontSize="20" Content="2" 
                    Command="{Binding DigitCommand}" CommandParameter="2"
                    />
            <Button Grid.Row="2" Grid.Column="2" FontSize="20" Content="3" 
                    Command="{Binding DigitCommand}" CommandParameter="3"
                    />
            <Button Grid.Row="2" Grid.Column="3" FontSize="20" Content="-" 
                    Command="{Binding OperationCommand}" CommandParameter="-"
                    />

            <!-- Fila 4 -->
            <Button Grid.Row="3" Grid.Column="0" FontSize="20" Content="0" 
                    Command="{Binding DigitCommand}" CommandParameter="0"
                    />
            <Button Grid.Row="3" Grid.Column="1" FontSize="20" Content="." 
                    Command="{Binding DecimalCommand}"
                    />
            <Button Grid.Row="3" Grid.Column="2" FontSize="20" Content="CE" 
                    Command="{Binding ClearEntryCommand}"/>
            <Button Grid.Row="3" Grid.Column="3" FontSize="20" Content="+" 
                    Command="{Binding OperationCommand}" CommandParameter="+"
                    />

            <!-- Fila 5 -->
            <Button Grid.Row="4" Grid.Column="0" FontSize="20" Content="C" 
                    Command="{Binding ClearCommand}"/>
            <Button Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" FontSize="24" 
                    Content="=" Command="{Binding OperationCommand}" CommandParameter="="/>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="CalcButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#f8f8f8"/>
            <Setter Property="BorderBrush" Value="#dddddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e8e8e8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#d8d8d8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OperationButtonStyle" BasedOn="{StaticResource CalcButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#f0f8ff"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e0e8ef"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#d0d8df"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EqualsButtonStyle" BasedOn="{StaticResource CalcButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#0078d7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0066b4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005499"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ClearButtonStyle" BasedOn="{StaticResource CalcButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#fff8f8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ffe8e8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#ffd8d8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
